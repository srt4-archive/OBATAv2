<h2>SIGN IN</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="centerDiv"><%= f.label :name %>
  <%= f.text_field :name %></div>

  <div class="centerDiv"><%= f.label :password %>
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="centerDiv"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div class="centerDiv"><%= f.submit "Sign in" %></div>

<% end %>

<div class="centerDiv">
    <%= render "links" %>
</div>